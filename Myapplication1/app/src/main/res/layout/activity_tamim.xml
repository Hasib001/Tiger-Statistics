<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tamimActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="209dp"
        android:layout_height="222dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:transitionName="imageTransition"
        app:srcCompat="@drawable/tamim" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="Tamim Iqbal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="53dp"
        android:text="batsman"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="119dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Tamim Iqbal Khan (Bengali: তামিম ইকবাল খান; born 20 March 1989) is a Bangladeshi international cricketer. Tamim made his One Day International debut in 2007 and played his first Test the following year. He served as vice-captain of the national side between December 2010 and September 2011. Tamim has scored centuries in all three formats of the game and is also the first Bangladeshi to score 10,000 international runs"
        />

    <LinearLayout
        android:layout_width="400dp"

        android:layout_height="322dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/tamim_stat" />




</RelativeLayout>